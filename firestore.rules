rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.email == 'jaypawar1205@gmail.com';
    }

    // Users collection: Users can read/write their own profile, Admin can read all
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      
      // Allow updates ONLY if credits and creditsUsed are NOT modified
      // Admin can update anything
      allow update: if isAdmin() || (isOwner(userId) 
                    && request.resource.data.credits == resource.data.credits
                    && request.resource.data.creditsUsed == resource.data.creditsUsed);

      // Allow create (initial setup) but backend handles critical data
      allow create: if isOwner(userId);

      // Allow access to subcollections (like history)
      match /{document=**} {
        allow read, write: if isOwner(userId) || isAdmin();
      }
    }

    // Brands collection: Users can read/write their own brand data, Admin can read/write all
    match /brands/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      
      // Allow updates ONLY if credits and creditsUsed are NOT modified
      // This prevents users from hacking their own credits via the console
      // Admin can update anything (including credits)
      allow update: if isAdmin() || (isOwner(userId) 
                    && request.resource.data.credits == resource.data.credits
                    && request.resource.data.creditsUsed == resource.data.creditsUsed);
      
      // Deny create (managed by backend), allow delete (for account closure)
      allow create: if false;
      allow delete: if isOwner(userId);
      
      // Allow access to subcollections (like payments) - Read Only for client
      match /{document=**} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if false;
      }
    }

    // Chats collection: Users can read/write their own chats
    match /chats/{chatId} {
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
    }

    // Transactions collection: Admin can read all, Users can read their own
    match /transactions/{transactionId} {
      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);
      // Only allow creation if authenticated (for client-side logging) or admin
      allow create: if isAuthenticated(); 
      allow update, delete: if isAdmin();
    }

    // System Logs: Admin only
    match /system_logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Only backend writes
    }
  }
}
